# Headers de sécurité et performance pour Netlify

# Headers globaux pour tous les fichiers
/*
  # Sécurité HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Protection contre le détournement de type MIME
  X-Content-Type-Options: nosniff
  
  # Protection contre le clickjacking
  X-Frame-Options: DENY
  
  # Protection XSS
  X-XSS-Protection: 1; mode=block
  
  # Content Security Policy pour PWA et Calendly
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://calendly.com https://*.calendly.com https://assets.calendly.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://assets.calendly.com; font-src 'self' https://fonts.gstatic.com https://assets.calendly.com; img-src 'self' data: https: blob: https://assets.calendly.com; connect-src 'self' https://calendly.com https://*.calendly.com https://api.calendly.com; frame-src https://calendly.com https://*.calendly.com; object-src 'none'; base-uri 'self'
  
  # Permissions Policy
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=()
  
  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin

# Cache des fichiers statiques (images, CSS, JS)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache des images
/images/*
  Cache-Control: public, max-age=2592000
  
# PWA - Manifest
/manifest.json
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=0, must-revalidate

# Service Worker - Pas de cache
/sw.js
  Content-Type: application/javascript
  Cache-Control: no-cache, no-store, must-revalidate
  
# Workbox files - Pas de cache
/workbox-*.js
  Content-Type: application/javascript  
  Cache-Control: no-cache, no-store, must-revalidate

# Fichiers HTML - Cache court
/*.html
  Cache-Control: public, max-age=300, must-revalidate

# Fichiers CSS et JS build
/*.css
  Cache-Control: public, max-age=31536000, immutable
  
/*.js
  Cache-Control: public, max-age=31536000, immutable

# Polices
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# API et formulaires (si utilisés)
/api/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization

# Robots et sitemap
/robots.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=86400

/sitemap.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=86400